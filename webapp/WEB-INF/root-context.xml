<?xml  version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- Root Context: определяет ресурсы, доступные всему приложению, всем сервлетам -->

    <!-- Включаем опцию использования конфигурационных аннотаций (@Annotation-based configuration)-->
    <context:annotation-config />

    <mvc:resources mapping="/resources/**" location="/resources/" cache-period="10"/>

    <!-- Определяем папки, в которых будем автоматически искать бины-компоненты (@Component, @Service)  -->
    <context:component-scan base-package="com.dmnoky.taxidermy.service" />
    <context:component-scan base-package="com.dmnoky.taxidermy.dao" />
    <context:component-scan base-package="com.dmnoky.taxidermy.validator" />
    <context:component-scan base-package="com.dmnoky.taxidermy.component" />

    <!-- Файлы со свойствами 'ключ'-'значение' -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:prop/jdbc.properties</value>
                <value>classpath:prop/filepath.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <!-- Для локализации -->
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
        <property name="cacheSeconds" value="0"/>
        <property name="basenames">
            <list>
                <value>prop.validation</value>
                <value>prop.typeMismatch</value>
            </list>
        </property>
    </bean>

    <!-- Файл с настройками ресурсов для работы с данными (Data Access Resources) -->
    <import resource="appconfig-data.xml" />

    <!-- Файл с настройками безопасности -->
    <import resource="appconfig-security.xml" />
</beans>